<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs') %>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <title>Ingresa a tu cuenta</title>
    </head>

<body>
    <%- include('../partials/header') %>
    <main class="mainForm">
        <form action="/users/login" method="POST" class="forms" id="formulario" novalidate>
            <h2 class="titulares">Ingresa a tu cuenta</h2>
            <% if(locals.errors && errors.credentials){ %>
                <p class="fbFormsProd"> <%= errors.credentials.msg %></p>    
            <% } %>
            <div class="container">
                <div class="group">
                    <input type="email" id="email" name="email" class="input" placeholder=" " 
                    <% if(locals.old && old.email){%>
                        value="<%= old.email %>"
                    <% } %>> 
                    <label for="email" class="label">Email:</label>
                    <span class="line"></span>
                    <span class="errors"></span>
                </div>
                <% if(locals.errors && errors.email){ %>
                    <p class="fbFormsProd"> <%= errors.email.msg %></p>    
                <% } %>

                <div class="group">
                    <input type="password" id="password" name="password" class="input" placeholder=" "> 
                    <label for="password" class="label">Contraseña: </label>
                    <span class="line"></span>
                    <span class="errors"></span>
                </div>
                <% if(locals.errors && errors.password){ %>
                    <p class="fbFormsProd"> <%= errors.password.msg %></p>    
                <% } %>

                <div class="group-remember">
                    <input type="checkbox" id="remember" class="remember" name="remember">
                    <label for="remember" class="remember-text">Recordarme</label>
                </div>

                <div class="cuentaregister">
                    <a href="/users/register"><p>¿No tenés cuenta? ¡Regístrate!</p></a>
                </div>
                
                <input type="submit" class="submit" value="Ingresar">
            </div>
        </form>
    </main>

    <%- include('../partials/footer') %>
    <script src="./js/validationLoginForm.js"></script> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>