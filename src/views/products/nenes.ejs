<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head') %>
        <title>Sección Niños</title>
    </head>
<body>   
    <%- include('../partials/header') %> 
    <section class="banner">
        <img src="/img/banner.png" alt="Banner">
    </section>
    
    <main>
        <section class="nenes">
            <% for(let i=0; i < productos.length; i++){ %>
                <% if(productos[i].genero == 'Masculino') { %>
                    <article class="article">
                        <a href="/products/detailproduct/<%= productos[i].id %>">
                            <img src=/img/products/<%= productos[i].src %> alt=<%= productos[i].nameProd %> class="product_img">
                            <p class="price">$<%=productos[i].price %></p>
                            <h4 class="description"><%=productos[i].nameProd%></h4>
                        </a>
                    </article>
                <% } %>
            <% } %>
        </section>  
    </main>

    <%- include('../partials/footer') %>

</body>
</html>