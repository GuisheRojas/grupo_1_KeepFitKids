<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head') %>
        <title>LISTADO PRODUCTOS</title>
    </head>
<body>    
    <%- include('../partials/header') %> 
    <section class="banner">
        <img src="/img/banner.png" alt="Banner">
    </section>
    
    <main>
        <section class="listadoProductos">
            <div id="titulares">
                <h4 class="titulares">  Listado de productos  </h4>
            </div>
            <% for(let i=0; i < productos.length; i++){ %>
                    <article class="article">
                       
                            <img src=/img/products/<%= productos[i].src %> alt=<%= productos[i].name %> class="product_img">
                            <p class="price">$<%=productos[i].price %></p>
                            <h4 class="description"><%=productos[i].name%></h4>
                            <div class="buttonsBox">
                                <div class="elim">
                                    <form method="post" action="/products/list/<%= productos[i].id%>?_method=delete" class="formbotelim">
                                        <div>
                                            <button class="botonElim" type="submit">        
                                                <i id="botonElim" class="fa-solid fa-trash-can"></i>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                                <div class="editarProducto">
                                    <form method="get" action="/products/editProduct/<%= productos[i].id%>" class="formeditar">
                                        <div>
                                            <button class="botonEdit" type="submit">        
                                                <i id="botonEdit" class="fa-solid fa-pencil"></i>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        
                    </article>
                
            <% } %>
        </section>        
    </main>

    <%- include('../partials/footer') %>

</body>
</html>